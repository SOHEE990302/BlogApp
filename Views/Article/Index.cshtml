@model IEnumerable<BlogApp.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<h2>Articles</h2>

@if (User.Identity.IsAuthenticated)
{
    <a asp-action="Create" class="btn btn-primary">Create New Article</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Contributor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.ContributorUsername</td>
                <td>
                    <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-info">Details</a>
                    
                    @if (User.Identity.IsAuthenticated && User.Identity.Name == article.ContributorUsername)
                    {
                        <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
        }
    </tbody>
</table>
